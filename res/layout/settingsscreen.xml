<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true" >
    
    <sofia.graphics.ShapeView
        android:id="@+id/shapeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    

    <TextView
        android:id="@+id/SettingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Settings"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="60sp" />

    <ToggleButton
        android:id="@+id/mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/SettingsTitle"
        android:layout_marginTop="17dp"
        android:checked="true"
        android:text="ToggleButton" />

    <TextView
        android:id="@+id/music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mute"
        android:layout_alignBottom="@+id/mute"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/mute"
        android:text="Music"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/resetScores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/mute"
        android:layout_marginTop="28dp"
        android:text="Clear" />

    <TextView
        android:id="@+id/ResetScores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/resetScores"
        android:layout_alignBottom="@+id/resetScores"
        android:layout_alignLeft="@+id/music"
        android:text="Reset Scores"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>